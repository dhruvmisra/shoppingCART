  <div class="container">
    <div class="row  " id="product_list">
      {{#each  products as |product|}}

      <div class="col-3 mx-4 my-2 card">
      
        <img src="{{product.imageSRC}}" height="350" width="40" class="card-img-top" alt="...">
        <h4 class="product_name">{{product.name}}</h4>
        <div class="product_manufacturer">{{product.manufacturer}}</div>
        <div class="row">
          <div class="col m-3 p-2">
            <b>Rs.{{product.price}}</b>
          </div>
          <a class="col btn btn-primary m-3 buybutton" href="localhost:2000/products/{{product.id}}">Buy</a>
        </div>
      </div>
      {{/each}}
    </div>
  </div>
